%h2 Sign up as a new user

= error_messages_for :user
-form_for :user, :url => users_path do |f|
  %table.form
    %tr
      %td= label_tag 'email'
      %td= f.text_field :email
    %tr
      %td= label_tag 'password'
      %td= f.password_field :password
    %tr
      %td= label_tag 'password_confirmation', 'Confirm Password'
      %td= f.password_field :password_confirmation
    %tr
      %td
      %td= submit_tag 'Sign up'
